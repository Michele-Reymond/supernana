<div class="form-container">

  <div class="green-bg">
    <div class= "s-container">
        <div class="item-container">
          <h1>Changez votre mot de passe</h1>
        </div>
    </div>
  </div>

  <div class="item-container">
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <%= f.input :reset_password_token, as: :hidden %>
      <%= f.full_error :reset_password_token %>

      <div class="form-inputs">
        <%= f.input :password,
                    label: "Nouveau mot de passe",
                    required: true,
                    autofocus: true,
                    hint: ("#{@minimum_password_length} caractÃ¨res minimum" if @minimum_password_length),
                    input_html: { autocomplete: "nouveau mot de passe" } %>
        <%= f.input :password_confirmation,
                    label: "Confirmez votre nouveau mot de passe",
                    required: true,
                    input_html: { autocomplete: "nouveau mot de passe" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Changer mon mot de passe", class: 's-button' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>

</div>
