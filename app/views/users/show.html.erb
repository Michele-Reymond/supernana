<div class="green-bg">
  <div class="item-container">
      <%= link_to edit_user_registration_path do %>
        <i class="fas fa-cog settings"></i>
      <% end %>
      <% if current_user.photo.attached? %>
        <%= cl_image_tag current_user.photo.key, width: 150, height: 150, gravity: :face, crop: :thumb, :zoom=>1.1, class: 'avatar-large' %>
      <% else %>
        <%= image_tag "profile.png", class: 'avatar-large' %>
      <% end %>
    <div class="profil-infos">
      <p><%= @user.first_name %></p>
      <p><%= @user.last_name %></p>
      <p><%= @user.email %></p>
    </div>
  </div>
</div>

<div class="item-container">

  <% if @user.contacts.any? %>
  <div class="info-container">
    <p><strong><%= @user.contacts.first.first_name %> <%= @user.contacts.first.last_name %></strong> est mon contact d'urgence et son numéro de téléphone est le <strong><%= @user.contacts.first.phone_number %></strong> </p>
    <%= link_to "Modifier ce contact", edit_user_contact_path(current_user.contacts.first), class: 's-button' %>
  </div>
  <% else %>
    <p>Pas de contact ajouté!</p>
    <%= link_to "Ajouter un contact", new_user_contact_path(@user), class: 's-button' %>
  <% end %>


</div>
