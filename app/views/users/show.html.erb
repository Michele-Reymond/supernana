<h1>Welcome to your profile <%= @user.first_name %></h1>

<% if current_user.photo.attached? %>
  <%= cl_image_tag current_user.photo.key %>
<% else %>
  <%= image_tag "profile.png" %>
<% end %>
<p><%= @user.first_name %></p>
<p><%= @user.last_name %></p>
<p><%= @user.email %></p>
<p><%= link_to "add a contact", new_user_contact_path(@user) %></p>
